---
export let tags: string[];
---

<div class="tags">
  {tags.map((tag) => (
    <span class="tag">{tag}</span>
  ))}
</div>

<style>
  .tags {
    display: flex;
    gap: 5px;
  }
  .tag {
    background: #ff6347;
    color: white;
    padding: 5px 10px;
    border-radius: 5px;
    font-size: 0.8rem;
  }
</style>
