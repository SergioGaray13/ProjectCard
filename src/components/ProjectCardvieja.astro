---
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  description: string;
  tags: string[];
  image?: ImageMetadata | string;  // Actualizamos el tipo
  url: string;
  techStack: string[];
}

const { title, description, tags, image, url, techStack } = Astro.props as Props;

// Obtener la URL de la imagen
const imageUrl = typeof image === 'string' ? image : image?.src;
---

<article class="project-card">
  <div class="image-container" style={`background-image: url(${imageUrl})`}>
    <div class="overlay">
      <div class="content">
        <h3>{title}</h3>
        <p>{description}</p>
        <div class="tags">
          {tags.map(tag => <span class="tag">{tag}</span>)}
        </div>
        <div class="tech-stack">
          {techStack.map(tech => <span class="tech">{tech}</span>)}
        </div>
        <a href={url} class="view-project" target="_blank" rel="noopener noreferrer">
          Ver proyecto
        </a>
      </div>
    </div>
  </div>
</article>

<style>
  .project-card {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    transition: transform 0.2s;
    width: 100%;
    max-width: 400px;
    height: 300px;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 12px rgba(0,0,0,0.15);
  }

  .image-container {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.1),
      rgba(0, 0, 0, 0.8)
    );
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  .content {
    padding: 1.5rem;
    color: white;
  }

  h3 {
    margin: 0 0 0.75rem 0;
    font-size: 1.25rem;
    color: white;
  }

  p {
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    backdrop-filter: blur(4px);
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tech {
    background: rgba(255, 255, 255, 0.15);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.875rem;
  }

  .view-project {
    display: inline-block;
    background: rgba(66, 153, 225, 0.8);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 500;
    transition: background-color 0.2s;
  }

  .view-project:hover {
    background: rgba(49, 130, 206, 0.9);
  }

  @media (max-width: 640px) {
    .project-card {
      max-width: 100%;
      height: 250px;
    }
  }
</style>
