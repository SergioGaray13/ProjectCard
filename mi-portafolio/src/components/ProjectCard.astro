interface Props {
  title: string;
  description: string;
  tags: string[];
  image: string;
  url: string;
}

const { title, description, tags, image, url } = Astro.props;
---

<article class="project-card">
  <img src={image} alt={title} />
  <div class="content">
    <h3>{title}</h3>
    <p>{description}</p>
    <div class="tags">
      {tags.map(tag => <span class="tag">{tag}</span>)}
    </div>
    <a href={url} class="view-project">Ver proyecto</a>
  </div>
</article>

<style>
  .project-card {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    transition: transform 0.2s;
  }
